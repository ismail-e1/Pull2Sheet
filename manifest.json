{
  "manifest_version": 3,
  "name": "Pull2Sheet",
  "version": "1.2",
  "description": "Extract data from web pages (text and images) directly into your spreadsheets using advanced on-device AI.",
  
  "permissions": [
    "sidePanel",
    "contextMenus",
    "storage"
  ],

  "host_permissions": [
    "<all_urls>" 
  ],

  "background": {
    "service_worker": "background.js"
  },

  "action": {
    "default_title": "Open Pull2Sheet"
  },
  
  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}